set shiftwidth=2

set incsearch
set ignorecase
set smartcase
set hlsearch

filetype on
filetype indent on

set number
set cursorline


set wildmenu

set nobackup
set noswapfile
set autoread
set hidden
set showcmd

set virtualedit=onemore
set visualbell
set showmatch
set laststatus=2
set wildmode=list:longest
set wrapscan

set ruler
set title


syntax enable
